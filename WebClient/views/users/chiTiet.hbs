<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-5">
                <div id="product-main-img">
                    <div class="product-preview">
                        <img src="../images/profile.png" alt="">
                    </div>
                </div>
            </div>

            <div class="col-md-2  col-md-pull-5">               
            </div>

            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">{{user.username}}</h2>
                    <p>Tên: {{user.ho}} {{user.ten}}</p>
                    <p>Địa chỉ: {{user.diaChi}}</p>
                    <p>Thành phố: {{user.tp}}</p>
                    <p>Số điện thoại: {{user.sdt}}</p>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->